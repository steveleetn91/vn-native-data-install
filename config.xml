<?xml version='1.0' encoding='utf-8'?>
<widget id="com.vnnative" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>VnNative</name>
    <description>
        Thanks selected Vn Native
    </description>
    <author email="contact@freelancer247.com" href="https://vn-native.freelancer247.club">
        Vn Native Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <allow-navigation href="http://192.168.0.102:4200" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <hook type="before_prepare" src="hooks/VnNativeChangeType.js" />
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <hook type="before_run" src="hooks/DevServer.js"/>
</widget>
